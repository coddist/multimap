{
  "name": "@coddist/library-template",
  "version": "0.1.0",
  "description": "Library template",
  "main": "pkg/index.js",
  "types": "pkg/index.d.ts",
  "files": [
    "pkg/"
  ],
  "scripts": {
    "build": "rm -rf ./pkg && tsc && ./scripts/removeComments.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "prepublish": "yarn lint && yarn test && yarn build",
    "test": "jest"
  },
  "repository": "https://github.com/coddist/library-template.git",
  "bugs": {
    "url": "https://github.com/coddist/library-template/issues"
  },
  "author": "Igor Snitkin <snigo.ogins@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "replace-in-file": "^6.3.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint . --fix",
      "git add"
    ]
  }
